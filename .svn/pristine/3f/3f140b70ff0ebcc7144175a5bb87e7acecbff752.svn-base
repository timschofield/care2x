body {
	margin: 0;
	font-family: verdana, arial, tahoma;
	font-size: 12px;
	color: black;
	background-color: #ffffee;
}

.title {
	width: 100%;
   background-color: #99ccff;
   color: #330066;
   font-size: 22px;
   font-weight: bold;
   border-bottom: 2px dotted blue;
	height: 36px;
}

a {
	text-decoration: none; 
	color: #000066;
}

a:hover {
	text-decoration: underline; 
	color: #cc0033; 
}

input#button {
   background-color: white;
	padding: 3px;
	font-family: verdana, arial, tahoma;
	font-size: 10px;
	color: black;
	border: 1px solid green;
	margin-bottom: 2px;
}

.content {
	width: 720px;
	margin: 0 auto 0 auto;
	text-align: center;
}

.content p,li {
	text-align: left;
}

#accept_text {
	height: 400px;
	width: 720px;
}

.footer {
	width: *;
	border: 2px solid #cfcfcf;
	margin-top: 20px;
	padding: 6px 8px 6px 8px;
	font-size: 9px;
}

#install_block {
	width: 100%;
	border-top: 1px solid green;
	margin-top: 20px;
	padding-top: 5px;
	padding-bottom: 5px;
	text-align: center;
}

#field_label {
	text-align: left;
	background-color: #eeeeee;
	padding: 2px 6px 2px 6px;
	border-top: 1px solid green;
}

#field_value {
	text-align: left;
	background-color: #ffffee;
	padding-left: 6px;
}

#field_separator {
	text-align: left;
	color: #800000;
}

#field_save {
	text-align: right;
}

#field_reset {
	text-align: left;
	padding-left: 6px;
}